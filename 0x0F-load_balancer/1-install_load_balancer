#!/usr/bin/env bash
# comment
sudo add-apt-repository -y ppa:vbernat/haproxy-2.7
sudo apt update -y
sudo apt install haproxy -y
sudo sed -i '/errorfile 504/a listen mubareksd' /etc/haproxy/haproxy.cfg
sudo sed -i 'listen mubareksd//a bind :80' /etc/haproxy/haproxy.cfg
sudo sed -i 'bind :80//a mode http' /etc/haproxy/haproxy.cfg
sudo sed -i '/mode http/a server 51402-web-01 100.25.191.25:80 check' /etc/haproxy/haproxy.cfg
sudo sed -i '/server 51402-web-01 100.25.191.25:80 check/a server 51402-web-02 54.209.27.50:80 check' /etc/haproxy/haproxy.cfg
sudo service haproxy start
